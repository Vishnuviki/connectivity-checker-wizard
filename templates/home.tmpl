{{ template "header.tmpl" .}}
<div class="row">
  <div class="col-md-10 mx-auto rounded bg-white">
    <div class="row">
      <div class="col-md-5">
        <div class="d-flex align-items-center justify-content-center">
          <img
            src="/static/logos/network.svg"
            alt="network-connectivity"
            class="img-fluid p-5"
          />
        </div>
      </div>

      <div class="col-md-7">
        <div class="m-5 text-center">
          <h1>Welcome!</h1>
        </div>

        <form class="m-5" action="/api/rule/1" method="post">
          <div class="form-group mb-4">
            <input
              type="text"
              class="form-control"
              id="sourceNamespace"
              name="sourceNamespace"
              placeholder="Source Namespace"
              required
            />
          </div>

          <div class="form-group mb-4">
            <input
              type="text"
              class="form-control"
              id="destinationPort"
              name="destinationPort"
              placeholder="Destination Port"
              required
            />
          </div>

          <div class="form-group mb-4">
            <input
              type="text"
              class="form-control"
              id="destinationAddress"
              name="destinationAddress"
              placeholder="Destination Address"
              required
            />
          </div>

          <div class="d-grid col-6 mx-auto pt-4">
            <button class="btn btn-outline-primary" type="submit">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ template "footer.tmpl" .}}